    <script>
        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Fade-in animations
        gsap.utils.toArray(".animate-fade-in").forEach((element) => {
            gsap.fromTo(element, { opacity: 0, y: 30 }, {
                opacity: 1,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: element,
                    start: "top 90%",
                    toggleActions: "play none none none"
                }
            });
        });

        const texts = [
            "Halo perkenalkan aku whiz.",
            "Saya mempunyai hobi bermain game.",
            "Saya juga sedikit paham tentang bot.",
            "babay para pengunjung :)"
        ];

        let textIndex = 0;
        let charIndex = 0;
        const typingText = document.getElementById("typing-text");
        const cursor = document.querySelector(".cursor");

        function typeText() {
            if (charIndex < texts[textIndex].length) {
                typingText.textContent += texts[textIndex].charAt(charIndex);
                charIndex++;
                setTimeout(typeText, 100); // Kecepatan mengetik
            } else {
                setTimeout(eraseText, 1500); // Waktu sebelum menghapus teks
            }
        }

        function eraseText() {
            if (charIndex > 0) {
                typingText.textContent = texts[textIndex].substring(0, charIndex - 1);
                charIndex--;
                setTimeout(eraseText, 50); // Kecepatan menghapus
            } else {
                textIndex = (textIndex + 1) % texts.length;
                setTimeout(typeText, 500); // Tunggu sebelum mengetik ulang
            }
        }

// Fungsi untuk menyembunyikan loading screen dan menampilkan konten
   function hideLoadingScreen() {
       const loadingScreen = document.getElementById('loadingScreen');
       const content = document.querySelectorAll('.animate-fade-in'); // Ambil semua elemen yang perlu ditampilkan
       const footer = document.getElementById('footer'); // Ambil elemen footer

       // Sembunyikan loading screen
       loadingScreen.classList.add('hidden');

       // Tampilkan semua elemen yang disembunyikan
       content.forEach(element => {
           element.style.display = 'block';
       });

       // Tampilkan footer
       footer.style.display = 'block';
   }

   // Event saat seluruh konten website selesai dimuat
   window.addEventListener('load', () => {
       // Simulasi loading selama 3 detik
       setTimeout(hideLoadingScreen, 3000);
   });

   // Fallback: Jika event 'load' tidak terpicu, sembunyikan loading screen setelah 5 detik
   setTimeout(hideLoadingScreen, 5000);

// Fungsi untuk menampilkan/menyembunyikan chat box
function toggleChat() {
    const chatBox = document.getElementById('chat-box');
    if (chatBox.style.display === 'flex') {
        chatBox.style.display = 'none'; // Sembunyikan chat box
    } else {
        chatBox.style.display = 'flex'; // Tampilkan chat box
    }
}

// Fungsi untuk menampilkan animasi typing
function showTypingIndicator() {
    const typingIndicator = document.getElementById('typing-indicator');
    typingIndicator.style.display = 'inline-flex';
}

// Fungsi untuk menyembunyikan animasi typing
function hideTypingIndicator() {
    const typingIndicator = document.getElementById('typing-indicator');
    typingIndicator.style.display = 'none';
}

// Fungsi untuk menambahkan pesan ke chat box
function addMessage(sender, text) {
    const chatMessages = document.getElementById('chat-messages');
    const messageElement = document.createElement('div');
    messageElement.classList.add('message', sender);

    if (sender === 'bot') {
        messageElement.innerHTML = `
            <div class="bot-profile">
                <img src="https://img.icons8.com/color/48/000000/robot.png" alt="Bot Profile">
                <span class="bot-name">Copilot</span>
            </div>
            <div class="message-content">${text}</div>
        `;
    } else {
        messageElement.innerHTML = `
            <div class="message-content">${text}</div>
        `;
    }

    chatMessages.appendChild(messageElement);
    chatMessages.scrollTop = chatMessages.scrollHeight; // Scroll ke bawah
}

// Fungsi untuk mengirim pesan
function sendMessage() {
    const input = document.getElementById('chat-input');
    const message = input.value.trim();
    if (message) {
        addMessage('user', message); // Tambahkan pesan pengguna
        input.value = ''; // Kosongkan input
        fetchBotResponse(message); // Panggil fungsi untuk mengambil respons bot
    }
}

// Fungsi untuk mengambil respons dari bot
async function fetchBotResponse(userMessage) {
    const chatMessages = document.getElementById('chat-messages');
    const typingIndicator = document.getElementById('typing-indicator');

    // Tampilkan animasi typing
    showTypingIndicator();

    try {
        // Custom prompt
        const customPrompt = `Saya adalah Copilot, asisten virtual yang dibuat oleh Anggazyy Zcoder. Saya akan membantu menjawab pertanyaan Anda dengan ramah dan informatif. Jika pertanyaan Anda tidak jelas, saya akan meminta klarifikasi.`;

        // Gabungkan custom prompt dengan pesan pengguna
        const fullMessage = `${customPrompt}\n\nPertanyaan: ${userMessage}`;

        // Kirim permintaan ke API
        const apiUrl = `https://fgsi1-restapi.hf.space/api/ai/copilot?text=${encodeURIComponent(fullMessage)}`;
        const response = await fetch(apiUrl);

        // Periksa respons API
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();

        // Sembunyikan animasi typing
        hideTypingIndicator();

        // Periksa hasil API
        if (!data.status || !data.data.answer) {
            console.error("Error from API:", data.message || "No data");
            addMessage('bot', 'Terjadi kesalahan saat memproses permintaan Anda. Silakan coba lagi.');
            return;
        }

        // Tambahkan pesan bot
        addMessage('bot', data.data.answer);
    } catch (error) {
        // Tangani error
        hideTypingIndicator();
        console.error("Error processing AI request:", error.message);
        addMessage('bot', 'Terjadi kesalahan saat mencoba mendapatkan jawaban. Silakan coba lagi nanti.');
    }
}


// Fungsi untuk mengaktifkan/menonaktifkan partikel
function toggleParticles(enable) {
    const particlesContainer = document.getElementById('particles-js');
    if (enable) {
        particlesContainer.style.display = 'block';
        particlesJS.load('particles-js', 'particles-config.json', function() {
            console.log('Particles.js loaded!');
        });
    } else {
        particlesContainer.style.display = 'none';
        particlesJS('particles-js').destroy(); // Hentikan partikel
    }
}

