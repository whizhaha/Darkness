                duration: 0.4
            },
            push: {
                particles_nb: 4
            }
        }
    },
    retina_detect: true
};

// Fungsi untuk mengaktifkan/menonaktifkan partikel
function toggleParticles(enable) {
    const particlesContainer = document.getElementById('particles-js');
    if (enable) {
        particlesContainer.style.display = 'block';
        particlesJS('particles-js', particlesConfig); // Inisialisasi partikel
    } else {
        particlesContainer.style.display = 'none';
        particlesJS('particles-js').destroy(); // Hentikan partikel
    }
}

// Fungsi untuk menampilkan/menyembunyikan popup settings
function toggleSettingsPopup() {
    const settingsPopup = document.getElementById('settings-popup');
    settingsPopup.classList.toggle('active');
    if (settingsPopup.classList.contains('active')) {
        toggleParticles(true); // Aktifkan partikel saat popup dibuka
    } else {
        toggleParticles(false); // Nonaktifkan partikel saat popup ditutup
    }
}
// Fungsi untuk mengubah background
function changeBackground(theme) {
    const body = document.body;
    if (theme === 'default') {
        body.style.background = 'linear-gradient(-45deg, #1E1E2E, #2A2A4E, #1E1E3F, #2A2A4E)';
        body.style.backgroundSize = '400% 400%';
        body.style.animation = 'gradient 15s ease infinite';
    } else if (theme === 'anime') {
        body.style.backgroundImage = 'url(https://files.catbox.moe/ihzbj4.jpg)'; // Ganti dengan URL gambar anime yang Anda inginkan
        body.style.backgroundSize = 'cover';
        body.style.backgroundPosition = 'center';
        body.style.animation = 'none';
    }
}

// Ambil elemen audio
const backgroundMusic = document.getElementById('background-music');

// Fungsi untuk memutar lagu berdasarkan URL
function playMusic(url) {
    backgroundMusic.src = url; // Setel sumber lagu
    backgroundMusic.play(); // Mulai memutar lagu
}

// Fungsi untuk menghentikan lagu
function stopMusic() {
    backgroundMusic.pause(); // Hentikan lagu
    backgroundMusic.currentTime = 0; // Reset waktu lagu ke awal
}
// Event listener untuk mengirim pesan dengan tombol Enter
document.getElementById('chat-input').addEventListener('keypress', function (e) {
    if (e.key === 'Enter') {
        sendMessage();
    }
});

